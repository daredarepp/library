    <% <!-- Include the header --> %>

    <% include ../header.ejs %>

    <% <!-- Main section --> %>

    <div class = "row">
        <div class="col-xs-12 home_wrapper">

            <% <!-- Popular movies window --> %>

            <div class="row">
                <div class="window col-md-8 col-md-offset-2">
                    
                    <!-- Title -->
                    <h2 class = "window_title">

                        <i class="material-icons">local_movies</i>

                        Popular Movies
                        
                        <!-- toggle button -->
                        <a href = "#" class = "material-icons toggle_button button"
                        title = "Toggle">keyboard_arrow_down</a>

                    </h2>

                    <!-- Window body -->
                    <div class = "window_body popular">
                        <div id = "popular_movies">
                            <!-- Movies -->
                            <% movies.forEach(function(movie) { %>

                                <a href = '<%= movie.url %>' class = 'category_items movie' >
                                    <img src = "/images/movies/<%= movie.title %>.jpg" alt = "Movie poster">
                                    <%= movie.title %>
                                </a>

                            <% }) %>
                            <a href = "#" id = "arrow_left" class = "material-icons">keyboard_arrow_left</a>
                            <a href = "#" id = "arrow_right" class = "material-icons">keyboard_arrow_right</a>
                        </div>
                        <a href="/catalog/movies" class = "see_all" title = "See all movies">See all movies</a>
                    </div>

                </div>
            </div>

            <% <!-- Popular directors window --> %>
            <div class = "row">
                <div class = "window col-md-8 col-md-offset-2">

                    <!-- Title -->
                    <h2 class = "window_title">
                        <i class = "material-icons">people</i>

                        Popular Directors

                        <!-- toggle button -->
                        <a href = "#" class = "material-icons toggle_button button"
                        title = "Toggle">keyboard_arrow_down</a>
                    </h2>

                    <!-- Window body -->
                    <div class = "window_body">
                        <div class = "popular_directors">
                            <!-- directors (only regular, popular in progress) -->
                            <% directors.forEach(function(director) { %>
        
                                <a href = '<%= director.url %>' class = 'category_items director' ><%= director.name %></a>
        
                            <% }) %>
                        </div>
                        <a href = "/catalog/directors" class = "see_all" title = "See all directors">See all directors</a>
                    </div>

                </div>
            </div>


        </div>  
    </div>


<% <!--Closing tag for the fluid container  --> %>
</div>