    <!-- Include the header -->
    
    <% include ../header.ejs %>
 
    <!-- Main section -->

    <div class = "row">
        <div class = "col-xs-12 catalog_wrapper">

            <% var categoryIcon = 'library_books' %>

            <% if(category === 'Authors'){ %>
                <% categoryIcon = 'people' %>
                
            <% }else if(category === 'Genres') { %>
                <% categoryIcon = 'view_agenda' %>
            
            <% } %> 

             
             
             <!-- Selection windows -->

            <!-- Books -->
            <div class = "window col-xs-8 col-xs-offset-2 col-md-2 col-md-offset-2 selection_window" 
            style = "display: none">
                <a class = "books" href = "/catalog/books" title = "Show Books">
                    <i class = "material-icons ">library_books</i>
                    Books
                </a>
            </div>

            <!-- Authors -->
            <div class = "window col-xs-8 col-xs-offset-2 col-md-2 col-md-offset-1 selection_window"
            style = "display: none">
                <a class = "authors" href = "/catalog/authors" title = "Show Authors">
                    <i class="material-icons">people</i>
                    Authors
                </a>
            </div>

            <!-- Genres -->
            <div class = "window col-xs-8 col-xs-offset-2 col-md-2 col-md-offset-1 selection_window"
            style = "display: none">
                <a class = "genres" href = "/catalog/genres" title = "Show Genres">
                    <i class="material-icons">view_agenda</i>
                    Genres
                </a>
            </div>

             
            <!-- Selection bar -->

            <div class = "window col-xs-12 col-md-6 col-md-offset-3 selection_bar" style = "display: block">

                <!-- Books -->
                <a class = "books" href = "/catalog/books" title = "Show Books">
                    <i class = "material-icons ">library_books</i>
                    Books
                </a>

                <!-- Authors -->
                <a class = "authors" href = "/catalog/authors" title = "Show Authors">
                    <i class="material-icons">people</i>
                    Authors
                </a>

                <!-- Genres -->
                <a class = "genres" href = "/catalog/genres" title = "Show Genres">
                    <i class="material-icons">view_agenda</i>
                    Genres
                </a>

            </div>
             

            <!-- Catalog window -->

            <div class="window col-xs-12 col-md-8 col-md-offset-2 catalog">
                <h2 class="window_title">
                    <i class="material-icons"><%= categoryIcon %></i>
                    <%= category %>
                </h2>
                <a id="close_button" href="#" title="Close" class="material-icons">close</a>
                <div class="window_body">
                    <ol>                                
                        <% result.map(function(one){ %>
                            <li><%= one %></li>
                        <% }) %>                                
                    </ol>                            
                </div>
            </div> 


        </div>
    </div>
        
        
<!--Closing tag for the fluid container  -->
</div>